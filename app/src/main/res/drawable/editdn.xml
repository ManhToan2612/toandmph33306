<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
        <solid android:color="@color/white"/>
            <stroke
                android:width="3dp"
                android:color="@color/black" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
            <corners android:radius="10sp"/>
        </shape>

    </item>

